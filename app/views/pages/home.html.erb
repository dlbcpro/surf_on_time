<% content_for :without_logo do %>
true
<% end %>

<div class="banner-home" >
  <div class="container banner-container mx-auto items-center py-10">
    <div class="banner-content grid grid-cols-2 h-full">


      <div class="Logo-text leading-none mont flex items-center">
          <h1>SURF<br>ON<br>TIME</h1>
      </div>





      <div class="h-full w-full flex items-center">
        <div class="form-content flex flex-col p-10">


          <p class="subtitle roboto text-xl mb-10">Trouve en 2 clics ton prochain surf trip avec les meilleures conditions</p>


          <form class="form" action="<%= spots_path %>">




            <div class="range-slider">
              <label class="text-white roboto" for="">Selectione ton niveau (hauteur de vague)</label>
              <span id="rs-bullet" class="rs-label roboto flex">0</span>
              <input id="rs-range-line" class="rs-range" type="range" value="0" min="0" max="4" step="0.1">
            </div>

            <div class="box-minmax roboto">
              <span>0</span><span>4+</span>
            </div>

            <div class="mb-5 text-white roboto">
              <p><span class="niveau">Débutant</span></p>
            </div>

            <hr>
            <hr>
            
            <!-- type: hidden -->
            <input type="text" name="min" id="rangeMin">
            <input type="text" name="max" id="rangeMax">
            <input id="toto" class="rs-range" type="range">

            <div class="inline-block relative roboto my-8">
              <select name="level "class="select-level bc-bleu-t block appearance-none w-full border-0 pr-32 py-2 pr-8 rounded shadow leading-tight focus:outline-none focus:shadow-outline roboto text-white text-left pl-5">

                <option>Mon niveau</option>
                <option>Débutant</option>
                <option>Intermédiaire</option>
                <option>Confirmé</option>
              </select>
              <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-white">
                <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/></svg>
              </div>
            </div>


            

            <label class="text-white roboto">Selectione tes dates</label>

            <input type="text" name="start" class="bc-bleu-t start-date rounded-md mb-2 text-left pl-5 placeholder-home" placeholder="De">
            <input type="text" name="end" class="bc-bleu-t end-date rounded-md mb-8 text-left pl-5 text-left pl-5 placeholder-home" placeholder="A">

            <input type="submit" class="mont bc-bleu-t flex items-center justify-center text-white border-white border-2 rounded-md py-2 px-8 font-normal hover:font-medium text-left pl-5" value="Trouver un spot">

          </form>



        </div>
      </div>


    </div>
  </div>
</div>















<div class="container flex items-center mx-auto p-10 title-find">
  <div class="flex">
    <h2 class="find-spot mont w-1/2 leading-none">Nous trouvons <span class="find-best mont">le meilleur spot</span></h2>
    <p class="px-10 detail roboto w-1/2 leading-8 text-lg">Ride on time analyse les <strong>conditons météorologiques</strong>, le vent et la <strong>difficulté du spot</strong> pour te proposer le spot qui correspondra à <strong>ton niveau</strong>.</p>
  </div>
</div>


<div class="mb-12">
    <%= image_tag 'images-home/parcours-home.png' %>
</div>


<!-- gallery glider-->

<div class="glider-contain container mx-auto">
  <div class="pb-8 pt-16 px-10">
    <h2 class="find-spot mont">Les meilleurs <span class="find-best mont">spots de la semaine</span></h2>
  </div>
  <div class="glider px-8 pb-5">



    <% Spot.last(3).each do |spot| %>
      <div class="">
      
        <%= link_to spot_path(spot) do %>
          <div data-aos="fade-up" data-aos-anchor-placement="top-bottom" class="spot-card shadow-sm rounded-lg hover:shadow-lg transition duration-1000 ease-in-out">
            <div class="img-spot">
              <%= image_tag 'divers/hossegor-graviere.jpg' %>
            </div>
            <div class="py-4 px-6">
              <p class="mont font-semibold text-xl bleu-f mb-2">Hossegor (La gravière)</p>
              <p class="roboto text-gray-500 mb-2">Soorts - Hossegor</p>
              <div class="flex items-center mb-2 bleu-f roboto"><%= image_tag 'pictos/wave.svg', class: "h-8 w-8 mr-5" %> <p>0.6 - 1.3m de hauteur</p> </div>
              <div class="flex items-center mb-2 bleu-f roboto"><%= image_tag 'pictos/soleil_nuage2.svg', class: "h-8 w-8 mr-5" %> <p>18°C</p> </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>

  </div>

  <button aria-label="Previous" class="glider-prev">«</button>
  <button aria-label="Next" class="glider-next">»</button>
  <div role="tablist" class="dots"></div>


</div>





